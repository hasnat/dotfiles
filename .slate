# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Resize Bindings
#bind right:cmd;alt
#bind left:cmd;alt
#bind up:cmd;alt
#bind down:cmd;alt
bind x:cmd;alt      resize +20% +20%
bind c:cmd;alt      resize -20% -20%
bind .:cmd;alt      throw next
bind ,:cmd;alt      throw previous


# Resize Bindings
bind l:cmd;alt  resize +5% +0
bind h:cmd;alt   resize -5% +0
bind k:cmd;alt     resize +0   -5%
bind j:cmd;alt   resize +0   +5%

# Nudge Bindings
bind l:ctrl;alt nudge +5% +0
bind h:ctrl;alt  nudge -5% +0
bind k:ctrl;alt    nudge +0   -5%
bind j:ctrl;alt  nudge +0   +5%
